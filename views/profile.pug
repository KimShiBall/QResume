extends layout



block content
  - var pdfDirectory = "/PDFs/" + email + ".pdf"

  .main.container.clearfix
    .row
      .col-md-8.col-md-offset-2
        h1.display-4
          img.avatar.img-circle.hidden-xs-down(src='/images/avatar.jpg', alt='avatar')
          | #{name}
          <embed width="100%" height="100%" name="plugin" id="pdf" src= #{pdfDirectory} type="application/pdf">
          #qrcode
            button.qr-action(data-qr-action='download')
            button.qr-action(data-qr-action='copy')
            a.qr-action(data-qr-action='visit' target='_blank' title='Visit QR Source')
        form(action='/profile' method='POST' enctype='multipart/form-data')
          div
            label(for='name') Image Title
            input#name(type='text' placeholder='Name' value='' name='name' required='')
          div
            label(for='desc') Image Description
            textarea#desc(name='desc' value='' rows='2' placeholder='Description' required='')
          div
            label(for='image') Upload Image
            input#image(type='file' name='image' value='' required='')
          div
            button(type='submit') Submit
