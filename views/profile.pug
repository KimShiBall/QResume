extends layout



block content
  - var profilePictureDirectory = "/images/" + profilePic + ".jpg"
  - var pdfDirectory = "/PDFs/" + pdfName + ".pdf"

  .main.container.clearfix
    .row
      .col-md-8.col-md-offset-2
       h1.display-4
        img.avatar.img-circle.hidden-xs-down(src=profilePictureDirectory, alt='avatar')
        | #{name}
      
       

    div(class="View")
      div(id = "qrcode")
          button.qr-action(data-qr-action='download')
          button.qr-action(data-qr-action='copy')
          a.qr-action(data-qr-action='visit' target='_blank' title='Visit QR Source')
    
      div(class="logo_row")
        a(href=links.github) 
          <img id=#{linkColor.github} src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png">
        a(href=links.linkedin) 
          <img id=#{linkColor.linkedin} src="https://assets.stickpng.com/images/58e91afdeb97430e81906504.png">
        a(href=links.handshake) 
          <img id=#{linkColor.handshake} src="https://www.mnsu.edu/globalassets/career-development-center/handshake/handshake-logos/logo-330x330.png">
        a(href=links.facebook) 
          <img id=#{linkColor.facebook} src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/cd/Facebook_logo_%28square%29.png/480px-Facebook_logo_%28square%29.png">
      div(class="logo_row")
        a(href=links.twitter) 
          <img id=#{linkColor.twitter} src="https://seeklogo.com/images/T/twitter-icon-square-logo-108D17D373-seeklogo.com.png">
        a(href=links.instagram) 
          <img id=#{linkColor.instagram} src="https://cdn4.iconfinder.com/data/icons/social-messaging-ui-color-shapes-2-free/128/social-instagram-new-square2-512.png">
        a(href=links.youtube) 
          <img id=#{linkColor.youtube} src="https://seeklogo.com/images/Y/youtube-square-logo-3F9D037665-seeklogo.com.png">
        a(href=links.reddit) 
          <img id=#{linkColor.reddit} src="https://cdn4.iconfinder.com/data/icons/social-messaging-ui-color-shapes-2-free/128/social-reddit-square1-512.png">
    

      div.profile
        center
          <embed width="100%" height="100%" name="plugin" id="pdf" src= #{pdfDirectory} type="application/pdf">
      
          
            
                
